<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AddUserFormController" prefWidth="400" prefHeight="400" stylesheets="@Login.css">
    <center>
        <VBox spacing="12" alignment="CENTER" style="-fx-padding: 30;">
            <Label text="Add New User" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
            <TextField fx:id="userIdField" promptText="User ID (e.g. pat005)" />
            <TextField fx:id="nameField" promptText="Full Name" />
            <TextField fx:id="emailField" promptText="Email" />
            <PasswordField fx:id="passwordField" promptText="Password" />
            <ComboBox fx:id="roleBox" promptText="Select Role" />
            <TextField fx:id="doctorIdField" promptText="Doctor ID (if adding patient)" />
            <Button text="Create User" onAction="#handleCreateUser"/>
        </VBox>
    </center>
</BorderPane>
