<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.AppointmentsTableViewController" prefWidth="600" prefHeight="400" stylesheets="@Login.css">
    <top>
        <Label text="Your Appointments" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 20 0 10 20;" />
    </top>
    <center>
        <TableView fx:id="appointmentsTable" prefWidth="600">
            <columns>
                <TableColumn fx:id="idCol" text="Appointment ID" prefWidth="180" />
                <TableColumn fx:id="dateTimeCol" text="Date &amp; Time" prefWidth="220" />
                <TableColumn fx:id="statusCol" text="Status" prefWidth="180" />
            </columns>
        </TableView>
    </center>
</BorderPane>
