<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.DoctorFeedbackFormController"
            prefWidth="400" prefHeight="350" stylesheets="@Login.css">
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;">
            <Label text="Give Feedback" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <TextField fx:id="patientIdField" promptText="Patient ID"/>
            <TextArea fx:id="commentsArea" promptText="Comments" prefRowCount="4"/>
            <TextField fx:id="medsField" promptText="Medications (comma-separated)"/>
            <Button text="Submit" onAction="#handleSubmit"/>
        </VBox>
    </center>
</BorderPane>
