<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.LoginController" prefWidth="400" prefHeight="300" stylesheets="@Login.css">
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 30;" maxWidth="400">
            <Label text="Remote Patient Monitoring System" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <GridPane hgap="10" vgap="10" alignment="CENTER">
                <Label text="Email:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="emailField" GridPane.rowIndex="0" GridPane.columnIndex="1" maxWidth="200" />

                <Label text="Password:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="passwordField" GridPane.rowIndex="1" GridPane.columnIndex="1" maxWidth="200" />
            </GridPane>

            <Button text="Login" onAction="#handleLogin" maxWidth="100" />
        </VBox>
    </center>
</BorderPane>
