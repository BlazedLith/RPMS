<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.RequestAppointmentController"
            prefWidth="400" prefHeight="300"
            stylesheets="@Login.css">
    <center>
        <VBox alignment="CENTER" spacing="15" style="-fx-padding: 30;">
            <Label text="Schedule Appointment" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <DatePicker fx:id="datePicker" promptText="Select Date" />
            <TextField fx:id="timeField" promptText="Time (HH:mm)" maxWidth="100"/>
            <Button text="Submit" onAction="#handleSubmit" maxWidth="100"/>
        </VBox>
    </center>
</BorderPane>
