<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.VitalsTableViewController" prefWidth="600" prefHeight="400" stylesheets="@Login.css">
    <top>
        <Label text="Your Vitals History" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 20 0 10 20;" />
    </top>
    <center>
        <TableView fx:id="vitalsTable" prefWidth="600" prefHeight="400">
            <columns>
                <TableColumn fx:id="heartRateCol" text="Heart Rate" prefWidth="140" />
                <TableColumn fx:id="bloodPressureCol" text="Blood Pressure" prefWidth="140" />
                <TableColumn fx:id="temperatureCol" text="Temperature" prefWidth="140" />
                <TableColumn fx:id="oxygenLevelCol" text="Oxygen Level" prefWidth="140" />
            </columns>
        </TableView>
    </center>
</BorderPane>
